<div class="jumbotron jumbotron-fluid banner" id="index_banner">
  <div class="container">
    <h1 class="display-4">Lists of movies</h1>
    <p class="lead">Find your favorites movie's list.</p>
  </div>
</div>

<div class="container">

  <div class="row d-flex flex-row-reverse m-2">
    <a href="<%= new_list_path %>" class="btn btn-primary">
      New list
    </a>
  </div>

  <div class="row d-flex">
    <% @lists.each do |l| %>
    <div class="col-sm-4">
        <div class="card p-2 my-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path l.photo.key, height: 300, crop: :scale %>')" >
          <div class="card-body">
            <a href="<%= list_path(l) %>" class="card-title" id="card-list">
            <%= l.name %>
            </a>
            <p class="card-text"></p>
          </div>
        </div>
    </div>
    <% end %>
  </div>

</div>

